# AI Agent Environment Configuration
# Copy to .env and configure for your deployment

# =============================================================================
# AI AGENT CORE SETTINGS
# =============================================================================
AI_AGENT_PUBLIC_ENABLED=true
AI_AGENT_TENANT_ENABLED=true
AI_AGENT_DEBUG=false
AI_AGENT_LOG_LEVEL=info

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=3072
ANTHROPIC_TEMPERATURE=0.3

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Provider Selection
PUBLIC_AI_PROVIDER=OPENAI
TENANT_AI_PROVIDER=ANTHROPIC
EMBEDDING_PROVIDER=OPENAI
EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session Management
AI_AGENT_SESSION_TTL_MINUTES=30
AI_AGENT_MAX_SESSIONS_PER_USER=5
AI_AGENT_MAX_SESSIONS_PER_TENANT=100
AI_AGENT_CLEANUP_INTERVAL_MINUTES=15

# Rate Limiting
PUBLIC_AI_RATE_LIMIT_WINDOW_MS=900000
PUBLIC_AI_RATE_LIMIT_MAX_REQUESTS=50
TENANT_AI_RATE_LIMIT_WINDOW_MS=300000
TENANT_AI_RATE_LIMIT_MAX_REQUESTS=100

# Encryption
AI_AGENT_ENCRYPTION_REQUIRED=true
AI_AGENT_ENCRYPTION_KEY_ROTATION_HOURS=24
AI_ENCRYPTION_PROVIDER=AWS_KMS
AI_ENCRYPTION_KEY_SPEC=AES_256

# Security Levels
AI_AGENT_SECURITY_LEVEL=MAXIMUM
AI_AGENT_CONTENT_FILTER_STRENGTH=MAXIMUM
AI_AGENT_TENANT_ISOLATION_LEVEL=MAXIMUM

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
AI_AGENT_REDIS_DB=2

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
AI_AGENT_DB_HOST=localhost
AI_AGENT_DB_PORT=5432
AI_AGENT_DB_NAME=writecarenotes_ai
AI_AGENT_DB_USER=ai_agent_user
AI_AGENT_DB_PASSWORD=secure-db-password
AI_AGENT_DB_SSL=true
AI_AGENT_DB_POOL_SIZE=20

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
AI_AGENT_TIMEOUT_MS=30000
AI_AGENT_MAX_CONCURRENT=100
AI_AGENT_CACHE_ENABLED=true
AI_AGENT_CACHE_TTL=300
AI_AGENT_STREAMING_ENABLED=true
AI_AGENT_BATCH_ENABLED=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
AI_AGENT_VECTOR_SEARCH_ENABLED=true
AI_AGENT_REALTIME_ENABLED=true
AI_AGENT_VOICE_INPUT_ENABLED=true
AI_AGENT_MULTILANG_ENABLED=true
AI_AGENT_ANALYTICS_ENABLED=true
AI_AGENT_EMERGENCY_ENABLED=true

# =============================================================================
# MONITORING & ALERTING
# =============================================================================
AI_AGENT_METRICS_ENABLED=true
AI_AGENT_ALERTING_ENABLED=true
AI_AGENT_AUDIT_LEVEL=COMPREHENSIVE
AI_AGENT_PERF_TRACKING_ENABLED=true
AI_AGENT_SECURITY_MONITORING_ENABLED=true

# Monitoring Endpoints
AI_METRICS_ENDPOINT=https://metrics.writecarenotes.com
AI_AUDIT_ENDPOINT=https://audit.writecarenotes.com
AI_ALERTING_WEBHOOK=https://alerts.writecarenotes.com/webhook

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================
AI_AGENT_GDPR_COMPLIANCE=true
AI_AGENT_NHS_DIGITAL_COMPLIANCE=true
AI_AGENT_CQC_COMPLIANCE=true
AI_AGENT_DATA_RESIDENCY=UK_ONLY
AI_AGENT_AUDIT_RETENTION_DAYS=2555  # 7 years for healthcare

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
AI_AGENT_ESCALATION_EMAIL=escalations@writecarenotes.com
AI_AGENT_SECURITY_EMAIL=security@writecarenotes.com
AI_AGENT_EMERGENCY_WEBHOOK=https://emergency.writecarenotes.com/webhook

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
AI_AGENT_TEST_MODE=false
AI_AGENT_MOCK_LLM=false
AI_AGENT_BYPASS_RATE_LIMIT=false
AI_AGENT_SKIP_ENCRYPTION=false  # NEVER set to true in production

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
AI_AGENT_MOBILE_ENABLED=true
AI_AGENT_VOICE_RECOGNITION_ENABLED=true
AI_AGENT_OFFLINE_MODE_ENABLED=true
AI_AGENT_PUSH_NOTIFICATIONS_ENABLED=true

# =============================================================================
# ADVANCED FEATURES
# =============================================================================
AI_AGENT_PREDICTIVE_ANALYTICS=true
AI_AGENT_CLINICAL_DECISION_SUPPORT=true
AI_AGENT_AUTOMATED_DOCUMENTATION=true
AI_AGENT_RISK_PREDICTION=true
AI_AGENT_QUALITY_MONITORING=true