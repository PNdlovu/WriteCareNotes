{
    "$schema":  "https://turbo.build/schema.json",
    "tasks":  {
                     "build":  {
                                   "dependsOn":  [
                                                     "^build"
                                                 ],
                                   "outputs":  [
                                                   "dist/**",
                                                   "build/**",
                                                   ".next/**"
                                               ]
                               },
                     "dev":  {
                                 "persistent":  true,
                                 "cache":  false
                             },
                     "test":  {
                                  "dependsOn":  ["build"],
                                  "outputs":  [
                                                  "coverage/**"
                                              ]
                              },
                     "lint":  {
                                  "outputs":  []
                              },
                     "clean":  {
                                   "cache":  false
                               }
                 }
}
