# ============================================================
# PRODUCTION ENVIRONMENT VARIABLES
# WriteCare Notes - Enterprise Care Home Management System
# Phase 2 Services - Production Ready
# ============================================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DATABASE_URL=postgresql://username:password@localhost:5432/writecarenotes
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=writecare_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=writecarenotes_production
DATABASE_SCHEMA=public

# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=20000

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================
NODE_ENV=production
PORT=3000
APP_NAME=WriteCare Notes
APP_VERSION=2.0.0

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=15

# ============================================================
# AUTHENTICATION & SECURITY
# ============================================================
# JWT Configuration (REQUIRED - Generate secure random string)
JWT_SECRET=your_super_secure_random_jwt_secret_min_32_characters_here
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_here
JWT_REFRESH_EXPIRATION=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_here
SESSION_MAX_AGE=86400000

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=10

# ============================================================
# MULTI-TENANCY & ORGANIZATION
# ============================================================
TENANT_ISOLATION_ENABLED=true
DEFAULT_ORGANIZATION_ID=

# ============================================================
# SERVICE #8: DOCUMENT MANAGEMENT
# ============================================================
# Document Storage
DOCUMENT_STORAGE_PATH=/var/writecare/documents
DOCUMENT_MAX_FILE_SIZE=52428800
DOCUMENT_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Document Versioning
DOCUMENT_VERSION_RETENTION_DAYS=365
DOCUMENT_MAX_VERSIONS=50

# Compliance
DOCUMENT_EXPIRY_WARNING_DAYS=30
DOCUMENT_GDPR_RETENTION_DAYS=2555

# ============================================================
# SERVICE #9: FAMILY COMMUNICATION
# ============================================================
# Messaging
FAMILY_MESSAGE_ENCRYPTION_ENABLED=true
FAMILY_MESSAGE_RETENTION_DAYS=730
FAMILY_MESSAGE_MAX_ATTACHMENTS=5
FAMILY_MESSAGE_MAX_ATTACHMENT_SIZE=10485760

# Visit Scheduling
FAMILY_VISIT_APPROVAL_REQUIRED=true
FAMILY_VISIT_MIN_DURATION=30
FAMILY_VISIT_MAX_DURATION=180

# Notifications
FAMILY_EMAIL_NOTIFICATIONS=true
FAMILY_SMS_NOTIFICATIONS=false

# ============================================================
# SERVICE #10: INCIDENT MANAGEMENT
# ============================================================
# Incident Reporting
INCIDENT_AUTO_NUMBER_PREFIX=INC
INCIDENT_CRITICAL_EMAIL_ALERTS=true

# CQC Notification
CQC_NOTIFICATION_DEADLINE_HOURS=24
CQC_AUTO_NOTIFICATION=false
CQC_EMAIL=notifications@cqc.org.uk

# RIDDOR Configuration
RIDDOR_ENABLED=true
RIDDOR_REPORTING_EMAIL=riddor@hse.gov.uk

# Corrective Actions
CORRECTIVE_ACTION_OVERDUE_ALERT_DAYS=7
CORRECTIVE_ACTION_DEFAULT_DEADLINE_DAYS=30

# ============================================================
# SERVICE #11: HEALTH MONITORING
# ============================================================
# Vital Signs Thresholds
VITAL_SIGNS_BP_LOW_SYSTOLIC=90
VITAL_SIGNS_BP_HIGH_SYSTOLIC=180
VITAL_SIGNS_BP_LOW_DIASTOLIC=60
VITAL_SIGNS_BP_HIGH_DIASTOLIC=110
VITAL_SIGNS_HR_LOW=50
VITAL_SIGNS_HR_HIGH=120
VITAL_SIGNS_TEMP_LOW=36.0
VITAL_SIGNS_TEMP_HIGH=38.0
VITAL_SIGNS_O2_LOW=92
VITAL_SIGNS_O2_CRITICAL=88

# NEWS2 Scoring
NEWS2_ENABLED=true
NEWS2_AUTO_ESCALATION=true
NEWS2_CRITICAL_SCORE=7

# Health Assessments
HEALTH_ASSESSMENT_REVIEW_DAYS=90
HEALTH_ASSESSMENT_OVERDUE_ALERT_DAYS=7

# ============================================================
# SERVICE #12: ACTIVITY & WELLBEING
# ============================================================
# Activity Planning
ACTIVITY_MAX_CAPACITY=30
ACTIVITY_MIN_STAFF_RATIO=0.1
ACTIVITY_BOOKING_ADVANCE_DAYS=14

# Wellbeing Tracking
WELLBEING_TREND_ANALYSIS_MONTHS=6
WELLBEING_MIN_ENJOYMENT_SCORE=3
WELLBEING_MIN_ENGAGEMENT_SCORE=3

# ============================================================
# SERVICE #14: REPORTING & ANALYTICS
# ============================================================
# Report Generation
REPORT_EXPORT_PATH=/var/writecare/reports
REPORT_TEMP_PATH=/var/writecare/reports/temp
REPORT_RETENTION_DAYS=90

# Export Formats
REPORT_PDF_ENABLED=true
REPORT_EXCEL_ENABLED=true
REPORT_CSV_ENABLED=true
REPORT_JSON_ENABLED=true

# CQC Compliance Reporting
CQC_COMPLIANCE_THRESHOLD=85
CQC_REPORT_AUTO_GENERATE=true
CQC_REPORT_FREQUENCY=monthly

# Dashboard KPIs
DASHBOARD_KPI_REFRESH_MINUTES=15
DASHBOARD_CACHE_ENABLED=true

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
# SMTP Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=notifications@writecarenotes.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_NAME=WriteCare Notes
SMTP_FROM_EMAIL=notifications@writecarenotes.com

# Email Templates
EMAIL_TEMPLATE_PATH=/var/writecare/email-templates

# ============================================================
# FILE STORAGE
# ============================================================
# Local Storage
STORAGE_TYPE=local
STORAGE_PATH=/var/writecare/uploads

# AWS S3 (Alternative)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=eu-west-2
# AWS_S3_BUCKET=writecarenotes-production

# Azure Blob Storage (Alternative)
# STORAGE_TYPE=azure
# AZURE_STORAGE_ACCOUNT=your_account
# AZURE_STORAGE_KEY=your_key
# AZURE_STORAGE_CONTAINER=documents

# ============================================================
# LOGGING & MONITORING
# ============================================================
# Application Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/writecare/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/var/log/writecare/audit.log

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Performance Monitoring
APM_ENABLED=false
APM_SERVER_URL=

# ============================================================
# CORS & SECURITY
# ============================================================
# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=https://app.writecarenotes.com,https://admin.writecarenotes.com
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================
# REDIS CACHE (Optional)
# ============================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================================
# COMPLIANCE & REGULATORY
# ============================================================
# CQC (Care Quality Commission)
CQC_PROVIDER_ID=your_cqc_provider_id
CQC_LOCATION_ID=your_cqc_location_id
CQC_REGISTRATION_STATUS=registered

# GDPR
GDPR_DPO_NAME=Data Protection Officer Name
GDPR_DPO_EMAIL=dpo@yourorganization.com
GDPR_DATA_RETENTION_DAYS=2555
GDPR_CONSENT_REQUIRED=true

# British Isles Jurisdictions
JURISDICTION=england
# Options: england, scotland, wales, northern_ireland, ireland, jersey, guernsey, isle_of_man

# ============================================================
# BACKUP & DISASTER RECOVERY
# ============================================================
# Database Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/writecare

# Disaster Recovery
DR_ENABLED=false
DR_REPLICA_URL=

# ============================================================
# FEATURE FLAGS
# ============================================================
# Phase 2 Services
FEATURE_DOCUMENT_MANAGEMENT=true
FEATURE_FAMILY_COMMUNICATION=true
FEATURE_INCIDENT_MANAGEMENT=true
FEATURE_HEALTH_MONITORING=true
FEATURE_ACTIVITY_WELLBEING=true
FEATURE_REPORTING_ANALYTICS=true

# AI Features
FEATURE_AI_ANALYSIS=false
FEATURE_AI_RECOMMENDATIONS=false

# Advanced Features
FEATURE_MOBILE_APP=false
FEATURE_OFFLINE_MODE=false
FEATURE_REAL_TIME_NOTIFICATIONS=true

# ============================================================
# DEVELOPMENT & DEBUGGING
# ============================================================
# Debug Mode (SET TO false IN PRODUCTION!)
DEBUG=false
DEBUG_SQL=false
DEBUG_ROUTES=false

# Development Tools (DISABLE IN PRODUCTION!)
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false

# ============================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================
# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid (Email Alternative)
SENDGRID_API_KEY=

# Stripe (Payments - if applicable)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# ============================================================
# TIMEZONE & LOCALIZATION
# ============================================================
TZ=Europe/London
LOCALE=en-GB
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm

# ============================================================
# PRODUCTION DEPLOYMENT
# ============================================================
# Deployment Info
DEPLOYMENT_ENV=production
DEPLOYMENT_VERSION=2.0.0
DEPLOYMENT_DATE=2025-10-09

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30000

