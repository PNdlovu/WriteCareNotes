{
  "dashboard": {
    "id": null,
    "title": "WriteCareNotes Security & Compliance",
    "tags": ["writecarenotes", "security", "compliance"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Compliance Score by Organization",
        "type": "graph",
        "targets": [
          {
            "expr": "compliance_score_percent",
            "legendFormat": "{{organization_id}} - {{compliance_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Compliance Score %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Security Incidents",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_incidents_total[1h])",
            "legendFormat": "{{severity}} - {{type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Incidents/hour",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Audit Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(audit_events_total[1h])",
